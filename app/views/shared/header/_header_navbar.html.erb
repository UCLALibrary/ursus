<%# SINAI %>
<% if Flipflop.sinai? %>
  <% url = request.original_url %>
  <%# NO SEARCHBAR %>
  <%# unless !url.include?('catalog/ark:') && url.include?('catalog') %>
    <%= render 'shared/header/sinai_header' %>
  <%# else %>
    <%# SHOW SEARCHBAR %>
    <%#= render 'shared/header/sinai_header' %>
    <!--
    <div class="container-full site-searchbar site-searchbar--sinai" role="search">
      <%#= render_search_bar %>
    </div> -->
  <%# end %>

<%# URSUS %>
<% else %>
  <%= render partial: 'shared/header/ursus_header' %>
  <div class="container-full site-searchbar site-searchbar--ursus" role="search">
    <%= render_search_bar %>
  </div>
<% end %>
