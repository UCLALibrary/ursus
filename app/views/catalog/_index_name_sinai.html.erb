<%# SINAI ONLY %>
<%# (this needs the show_presenter or it does not work) %>

<% doc_presenter = show_presenter(document) %>
<% sinai_index_name = Ursus::SinaiIndexNameMetadataPresenter.new(document: doc_presenter.fields_to_render).sinai_index_name_terms %>

<% if sinai_index_name.length > 0 %>
  <% concatonated_name_key = "NAME" %>
  <% concatonated_name = "" %>

  <% sinai_index_name.each do |field_name, field| %>
    <% name_field = (doc_presenter.field_value field) + ' | ' %>
    <% concatonated_name << name_field %>
  <% end %>

  <% concat_name = concatonated_name.delete_suffix(' | ').html_safe %>

  <dt class="metadata-block__label-key">
    <!-- KEY -->
    <%= concatonated_name_key %>
  </dt>
  <!-- VALUE -->
  <dd class="metadata-block__label-value">
    <%= concat_name %>
  </dd>
<% end %>
