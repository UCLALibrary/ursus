<div class='collection-record-container'>
  <% if document[:summary_tesim] %>
    <h2>About this Collection</h2>
    <p itemprop="abstract"> 
      <%= document[:summary_tesim][0] %> 
    </p>
    <hr>
  <% end %>

  <%= render 'catalog/collection_record/collection_overview_metadata',  document: document  %>
  <%= render 'catalog/collection_record/find_this_collection_metadata', document: document  %>
  <%= render 'catalog/collection_record/access_condition_metadata', document: document  %>
  <%= render 'catalog/collection_record/note_collection_metadata', { document: document } %>
  <%= render 'catalog/collection_record/physical_description_metadata', { document: document } %>
  <%= render 'catalog/collection_record/keyword_metadata', { document: document } %>

  <a href="/catalog?f%5Bmember_of_collections_ssim%5D%5B%5D=<%= document[:title_tesim][0] %>" class="btn btn-warning btn-lg browse-collection-btn" role="button">Browse items in this collection</a>
</div>
