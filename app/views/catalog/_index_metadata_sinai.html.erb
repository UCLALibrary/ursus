<%# SINAI ONLY %>

<% doc_presenter = index_presenter(document) %>
<% sinai_index_metadata = Ursus::SinaiIndexMetadataPresenter.new(document: doc_presenter.fields_to_render).sinai_index_terms %>

<% if sinai_index_metadata.length > 0 %>
  <% sinai_index_metadata.each do |field_name, field| -%>
    <dt class="metadata-block__label-key metadata-block__label-key--sinai">
      <!-- KEY -->
      <%= (render_index_field_label document, field: field_name).tr(':', '') %>
    </dt>
    <!-- VALUE -->
    <dd class="metadata-block__label-value metadata-block__label-value--sinai">
      <%= doc_presenter.field_value field %>
    </dd>
  <% end %>
<% end %>
