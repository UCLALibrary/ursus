<% doc_presenter = document_presenter(document) %>
<% access_condition = Ursus::CollectionAccessConditionMetadataPresenter.new(document: doc_presenter).collection_access_condition_terms %>

<% if access_condition.length > 0 %>
  <div class='metadata-block'>
    <h2 class='metadata-block__title'>Access Condition</h2>
    <% access_condition.each do |field_name, field| %>
      <div class='metadata-block__group--collection-pg'>
        <div class="blacklight-<%= field_name.parameterize %> metadata-block__label-key">
          <%= field.label %>
        </div>
        <div class="blacklight-<%= field_name.parameterize %> metadata-block__label-value">
          <%= doc_presenter.field_value field %>
        </div>
      </div>
    <% end %>
    <hr class='divider divider--ursus'>
  </div>
<% end %>
