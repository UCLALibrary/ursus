<%# SINAI ONLY %>

<% doc_presenter = index_presenter(document) %>
<% sinai_index_language = Ursus::SinaiIndexLanguagePresenter.new(document: doc_presenter.fields_to_render).sinai_index_language_terms %>

<% if sinai_index_language.length.positive? %>
  <% field_values = [] %>
  <% sinai_index_language.each_value do |field| %>
    <% value = (doc_presenter.field_value field) %>
    <% field_values += value.split("&nbsp;|&nbsp;") %>
  <% end %>
  <%= render_truncated_list(field_values) %>
<% end %>
