<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% page_display = number_with_delimiter(page.to_s) %>

<li class="pagination__page-item <%= 'active' if page.current? %>">
  <% if page.current? %>
    <span class="pagination__page-link" aria-label="<%= t('views.pagination.aria.current_page', page: page_display) %>" aria-current="true"><%= page_display %></span>
  <% else %>
    <%= link_to page_display, url, :remote => remote, :rel => page.next? ? 'next' : page.prev? ? 'prev' : nil, class: 'pagination__page-link', aria: { label: t('views.pagination.aria.go_to_page', page: page_display) } %>
  <% end %>
</li>

