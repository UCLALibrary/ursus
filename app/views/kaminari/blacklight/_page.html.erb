<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote -%>


<!-- URSUS -->

  <% page_display = number_with_delimiter(page.to_s) %>

  <li class="pagination__page-item pagination__page-item--ursus <%= 'active' if page.current? %>">
    <% if page.current? %>
      <span class="pagination__page-link pagination__page-link--ursus" aria-label="<%= t('views.pagination.aria.current_page', page: page_display) %>" aria-current="true"><%= page_display %></span>
    <% else %>
      <% if page.next? %>
         <%= link_to page_display, url, remote: remote, rel: 'next', class: 'pagination__page-link pagination__page-link--ursus', aria: { label: t('views.pagination.aria.go_to_page', page: page_display) } %>
      <% elsif page.prev? %>
      <%= link_to page_display, url, remote: remote, rel: 'prev', class: 'pagination__page-link pagination__page-link--ursus', aria: { label: t('views.pagination.aria.go_to_page', page: page_display) } %>
      <% else %>
              <%= link_to page_display, url, remote: remote, rel: nil, class: 'pagination__page-link pagination__page-link--ursus', aria: { label: t('views.pagination.aria.go_to_page', page: page_display) } %>
      <% end %>
    <% end %>
  </li>

