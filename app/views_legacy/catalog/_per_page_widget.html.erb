<% if show_sort_and_per_page? and !blacklight_config.per_page.blank? %>
<span class="sr-only"><%= t('blacklight.search.per_page.title') %></span>
<div id="per_page-dropdown" class="search-widget__dropdown">
  <button type="button" class="btn-base btn-outline-ursus--light dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    <%= t(:'blacklight.search.per_page.button_label', :count => current_per_page) %> <span class="caret"></span>
  </button>
  <div class="dropdown-menu dropdown-menu-right" role="menu">
    <%- per_page_options_for_select.each do |(label, count)| %>
      <%= link_to(label, url_for(search_state.params_for_search(per_page: count)), class: 'dropdown-item dropdown-item--ursus ur-link') %>
    <%- end -%>
  </div>
</div>
<% end %>
